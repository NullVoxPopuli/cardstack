{
  "name": "cardstack",
  "version": "0.0.0",
  "description": "Cardstack suite for ambitious applications.",
  "repository": "https://github.com/cardstack/cardstack",
  "author": "Edward Faulkner <edward@eaf4.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "private": true,
  "scripts": {
    "rm_node_modules": "rm -rf node_modules cardhost/node_modules server/node_modules cards/*/node_modules"
  },
  "workspaces": {
    "packages": [
      "base-cards",
      "cardhost",
      "server",
      "core",
      "compiled"
    ],
    "nohoist": [
      "**/@ember/string",
      "**/@glimmer/util",
      "wrap-legacy-hbs-plugin-if-needed/@glimmer/reference",
      "ember-template-recast/@glimmer/reference",
      "**/@glimmer/runtime"
    ]
  },
  "resolutions": {
    "**/@babel/types": "^7.12.13"
  },
  "volta": {
    "node": "14.17.1",
    "yarn": "1.22.10"
  }
}
