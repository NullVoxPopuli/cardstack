{
  "name": "cardstack",
  "version": "0.0.0",
  "description": "Cardstack suite for ambitious applications.",
  "repository": "https://github.com/cardstack/cardstack",
  "author": "Edward Faulkner <edward@eaf4.com>",
  "license": "MIT",
  "engines": {
    "node": "^14.0.0"
  },
  "dependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/console-ui": "^2.2.3",
    "@types/filenamify-url": "^1.0.1",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.2.1",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "14.14.35",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.11",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "ember-template-lint": "^3.1.1",
    "eslint": "^7.22.0",
    "eslint-plugin-ember": "^10.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "glob": "^7.1.6",
    "lerna": "4.0.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.0",
    "typescript": "4.2.3"
  },
  "scripts": {
    "clean": "git clean -x -f",
    "compile": "yarn subgraph:codegen tsc --build ./tsconfig.json",
    "deploy:web-client:staging": "cd packages/web-client && ember deploy staging --verbose",
    "prepare": "npm run compile",
    "subgraph:codegen": "cd ./packages/cardpay-subgraph && yarn codegen",
    "lint": "yarn subgraph:codegen && npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:deps": "node scripts/find-bad-deps.js",
    "lint:js": "eslint . --cache --ignore-path .gitignore --ext=js,ts",
    "lint:js:pkg": "sh -c 'eslint packages/${0} --cache --ignore-path .gitignore --ext=js,ts'",
    "lint:hbs": "cd packages/web-client && ember-template-lint .",
    "lint:hbs:web-client": "cd packages/web-client && ember-template-lint .",
    "start": "WAIT_ON_TIMEOUT=600000 start-server-and-test 'yarn start:web-client' http://localhost:4200 'yarn start:hub'",
    "start:hub": "./packages/hub/bin/server.ts",
    "console:hub": "node --experimental-repl-await ./packages/hub/bin/console.ts",
    "start:web-client": "cd packages/web-client && ember serve",
    "test": "npm-run-all --aggregate-output --continue-on-error --parallel test:*",
    "test:did-resolver": "mocha ./packages/test-support/bin/run.js --timeout 60000 -- did-resolver",
    "test:hub": "mocha ./packages/test-support/bin/run.js --timeout 60000 -- hub",
    "test:web-client": "cd packages/web-client && ember test",
    "test:web-client:serve": "cd packages/web-client && ember test --serve --no-launch"
  },
  "workspaces": [
    "packages/*",
    "cards/*"
  ],
  "private": true,
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.5"
  }
}