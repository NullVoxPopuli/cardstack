{
  "name": "cardstack",
  "version": "0.0.0",
  "description": "Cardstack suite for ambitious applications.",
  "repository": "https://github.com/cardstack/cardstack",
  "author": "Edward Faulkner <edward@eaf4.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "private": true,
  "scripts": {
    "rm_node_modules": "find . -name node_modules -type d -prune -exec rm -rf {} +",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:cardhost": "cd packages/cardhost && yarn lint",
    "lint:compiler-server": "cd packages/compiler-server && yarn lint",
    "lint:core": "cd packages/core && yarn lint"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@ember/string",
      "**/@glimmer/util",
      "wrap-legacy-hbs-plugin-if-needed/@glimmer/reference",
      "ember-template-recast/@glimmer/reference",
      "**/@glimmer/runtime"
    ]
  },
  "resolutions": {
    "**/@babel/types": "^7.12.13"
  },
  "volta": {
    "node": "14.17.1",
    "yarn": "1.22.10"
  }
}