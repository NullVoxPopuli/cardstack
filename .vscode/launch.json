{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Ember test browser",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:7357",
      "webRoot": "${workspaceFolder}/packages/data/tests/dummy"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test Suite",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "cwd": "${workspaceRoot}",
      "args": [
        "-r",
        "esm",
        "packages/test-support/bin/run.js",
        "--timeout",
        "600000",
        "--grep",
        "can find built-in cards from the index"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build web-client",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceRoot}/packages/web-client",
      "args": ["b"],
      "env": {
        "JOBS": "1"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Bridge Tokens",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        // Kovan CARD Bridge args
        // "bridge",
        // "10000",
        // "0xd6E34821F508e4247Db359CFceE0cb5e8050972a",
        // "--network", "kovan",
        // // Hassan's testing mnemonic feel free to use your own
        // "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"

        // Kovan DAI Bridge args
        "bridge",
        "10",
        "0x4F96Fe3b7A6Cf9725f59d353F723c1bDb64CA6Aa", // Kovan DAI
        "--network", "kovan",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: View Safes",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "safes-view",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
        // Hassan's testing merchant mnemonic: 0x54b11672e90B38ca52140Ac364EebC5cC07F3d91
        // "--mnemonic", "sign crawl student excite mouse young narrow essence soul brick life slush"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Transfer Tokens from Safe",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "safe-transfer-tokens",
        "0x367F15f878DD75ec155010318F97E5dA2b3102c4", // Hassan's depot safe feel free to use your own
        "0xFeDc0c803390bbdA5C4C296776f4b574eC4F30D1", // DAI.CPXD
        "0xED3d83fa8706BB1e6795C72431907c409831211B", // arbitrary prepaid card
        "9",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Create Prepaid Card",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "prepaidcard-create",
        "0x367F15f878DD75ec155010318F97E5dA2b3102c4", // Hassan's depot safe feel free to use your own
        "0xFeDc0c803390bbdA5C4C296776f4b574eC4F30D1", // DAI.CPXD
        "500",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Register New Merchant",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "register-merchant",
        "0xED3d83fa8706BB1e6795C72431907c409831211B", // Hassan's prepaid card --feel free to use your own
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Pay Merchant",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "pay-merchant",
        "0x0dAEeaA725b65aDf2f253541f59Af718f3859f00", // safe for Hassan's merchant (whose address the correlates with the mnemenoic 0x2f58630CA445Ab1a6DE2Bb9892AA2e1d60876C13)
        "0xE797a6FcF8546b1EE806F55c1C9f6776Af5ad3B1", // Hassan's prepaid card --feel free to use your own
        "100",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Price for face value",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "price-for-face-value",
        "0xFeDc0c803390bbdA5C4C296776f4b574eC4F30D1", // DAI.CPXD
        "10000",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: New prepaid card gas fee",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "new-prepaidcard-gas-fee",
        "0xFeDc0c803390bbdA5C4C296776f4b574eC4F30D1", // DAI.CPXD
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: USD Price",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "usd-price",
        "DAI",
        "5",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: ETH Price",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "eth-price",
        "DAI",
        "100",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cardpay: Oracle Update Time",
      "program": "${workspaceFolder}/packages/cardpay-cli/cardpay.js",
      "console": "integratedTerminal",
      "env": {},
      "args": [
        "price-oracle-updated-at",
        "DAI",
        "--network", "sokol",
        // Hassan's testing mnemonic feel free to use your own
        "--mnemonic", "pizza monitor radio able holiday boil beyond kingdom throw evil limb dream"
      ]
    }
  ]
}
