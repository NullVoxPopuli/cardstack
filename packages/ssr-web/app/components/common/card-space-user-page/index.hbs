<div class="card-space-user-page"
  {{did-insert this.loadAddress}}
  {{did-insert this.setInitialPaymentLinkMode}}
>
  <CardPay::Merchant
    @name={{@model.name}}
    @logoBackground={{@model.backgroundColor}}
    @logoTextColor={{@model.textColor}}
    @vertical={{true}}
    @size="large"
    @text={{@model.id}}
  />
  <Common::PaymentLink
    @mode={{this.paymentLinkMode}}
    @switchMode={{this.setPaymentLinkMode}}
    @paymentURL={{this.paymentURL}}
    @addressFetchingError={{this.addressFetchingError}}
    @deepLinkPaymentURL={{this.deepLinkPaymentURL}}
  />
</div>
